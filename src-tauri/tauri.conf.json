{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "秒验",
  "version": "0.2.0",
  "identifier": "com.quickscan.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "秒验 QuickScan",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "infoPlist": "Info.plist",
      "minimumSystemVersion": "10.13",
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "nsis": {
        "languages": ["SimpChinese", "English"]
      }
    }
  }
}
